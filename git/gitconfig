[merge]
tool = vimdiff

[alias]
st    = status
ci    = commit
br    = branch
co    = checkout
di    = diff
egrep = !git --no-pager grep -E --color=auto
slog  = log --stat
glog  = log --graph
plog  = !git --no-pager log --pretty=format:'%h %Cblue%cn %Creset%cr %Cgreen%s'

[color]
diff   = auto
status = auto
branch = auto

[push]
default = simple
